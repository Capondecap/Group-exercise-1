<div class="item-detail-container">
  <div class="item-header">
    <h1>{{item.name}}</h1>
    <span class="status-badge status-{{item.status}}">{{item.status}}</span>
  </div>

  {{#if item.imagePath}}
  <div class="item-image-container">
    <img src="{{item.imagePath}}" alt="{{item.name}}" class="item-image-full">
  </div>
  {{/if}}

  <div class="item-details">
    <h2>Item Information</h2>
    
    <div class="detail-row">
      <strong>Item Name:</strong>
      <span>{{item.name}}</span>
    </div>

    <div class="detail-row">
      <strong>Description:</strong>
      <span>{{item.description}}</span>
    </div>

    <div class="detail-row">
      <strong>Location:</strong>
      <span>{{item.location}}</span>
    </div>

    <div class="detail-row">
      <strong>Date:</strong>
      <span>{{item.date}}</span>
    </div>

    <div class="detail-row">
      <strong>Contact:</strong>
      <span>{{item.contact}}</span>
    </div>

    <div class="detail-row">
      <strong>Current Status:</strong>
      <span class="status-{{item.status}}">{{item.status}}</span>
    </div>

    <div class="detail-row">
      <strong>Item ID:</strong>
      <span>{{item.id}}</span>
    </div>
  </div>

  <div class="item-actions">
    <h2>Status Management</h2>
    <form method="POST" action="/items/{{item.id}}/status" class="status-form">
      <button type="submit" name="status" value="Lost" class="btn btn-lost">
        Mark as Lost
      </button>
      <button type="submit" name="status" value="Found" class="btn btn-found">
        Mark as Found
      </button>
      <button type="submit" name="status" value="Closed" class="btn btn-closed">
        Mark as Closed
      </button>
    </form>

    <h2>Delete Report</h2>
    <form method="POST" action="/items/{{item.id}}/delete" class="delete-form" onsubmit="return confirm('Are you sure you want to delete this report? This action cannot be undone.');">
      <button type="submit" class="btn btn-delete">
        Delete Report
      </button>
    </form>
  </div>

  <div class="back-link">
    <a href="/" class="btn btn-back">‚Üê Back to Dashboard</a>
  </div>
</div>